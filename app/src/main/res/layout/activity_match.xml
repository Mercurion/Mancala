<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:weightSum="9" android:id="@+id/l1">



    <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/player1bowl1"
            android:background="@drawable/bowl"
            android:layout_weight="0.02"
        android:layout_alignBottom="@+id/player1tray1"
        android:layout_alignParentStart="true" />

    <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/player1bowl2"
            android:background="@drawable/bowl"

            android:layout_below="@+id/player1bowl1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/player1bowl3"
            android:background="@drawable/bowl"

            android:layout_below="@+id/player1bowl2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/player1bowl4"
            android:background="@drawable/bowl"

            android:layout_below="@+id/player1bowl3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/player1bowl5"
            android:background="@drawable/bowl"

            android:layout_below="@+id/player1bowl4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/player1bowl6"
        android:background="@drawable/bowl"

        android:layout_below="@+id/player1bowl5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:id="@+id/player1tray1"
            android:background="@drawable/score1Button"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

    <Button
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:id="@+id/player2tray2"
            android:background="@drawable/score2Button"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/player2bowl1"
            android:background="@drawable/bowl"
        android:layout_alignBottom="@+id/player1tray1"
        android:layout_alignParentEnd="true" />

    <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/player2bowl2"
            android:background="@drawable/bowl"
            android:layout_alignParentRight="true" android:layout_below="@+id/player2bowl1"
            android:layout_alignParentEnd="true"/>

    <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/player2bowl3"
            android:background="@drawable/bowl"
            android:layout_alignParentRight="true" android:layout_below="@+id/player2bowl2"
            android:layout_alignParentEnd="true"/>

    <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/player2bowl4"
            android:background="@drawable/bowl"
            android:layout_alignParentRight="true" android:layout_below="@+id/player2bowl3"
            android:layout_alignParentEnd="true"/>

    <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/player2bowl5"
            android:background="@drawable/bowl"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/player2bowl4"
            android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/player2bowl6"
        android:background="@drawable/bowl"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/player2bowl5"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>

