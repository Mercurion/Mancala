<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tableback"
    android:weightSum="9" android:id="@+id/l1">



    <Button
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:id="@+id/player2bowl6"
        android:layout_above="@+id/score1"
        android:layout_toStartOf="@+id/player2bowl5" />

    <Button
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:id="@+id/player2tray2"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:id="@+id/player1bowl1"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/player1bowl2" />

    <Button
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:id="@+id/player2bowl5"
        android:layout_alignBottom="@+id/player2bowl4"
        android:layout_toStartOf="@+id/player2bowl4" />

    <Button
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:id="@+id/player2bowl4"
        android:layout_alignBottom="@+id/player2bowl3"
        android:layout_toStartOf="@+id/player2bowl3" />

    <Button
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:id="@+id/player2bowl3"
        android:layout_alignBottom="@+id/player2bowl2"
        android:layout_toStartOf="@+id/player2bowl2" />

    <Button
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:id="@+id/player2bowl2"
        android:layout_alignBottom="@+id/player2bowl1"
        android:layout_toStartOf="@+id/player2bowl1" />

    <Button
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:id="@+id/player2bowl1"
        android:layout_above="@+id/score2"
        android:layout_toStartOf="@+id/player1tray1" />

    <Button
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:id="@+id/player1tray1"
        android:layout_marginLeft="-50dp"
        android:layout_below="@+id/score1"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:id="@+id/player1bowl2"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/player1bowl3" />

    <Button
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:id="@+id/player1bowl3"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/player1bowl4" />

    <Button
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:id="@+id/player1bowl4"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/player1bowl5" />

    <Button
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:id="@+id/player1bowl5"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/player1bowl6" />

    <Button
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:id="@+id/player1bowl6"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/player1tray1" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:id="@+id/score1"
        android:background="@drawable/playerscore2"
        android:layout_above="@+id/player2tray2"
        android:layout_alignStart="@+id/player2tray2" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:id="@+id/score2"
        android:background="@drawable/playerscore1"
        android:layout_above="@+id/player1tray1"
        android:layout_alignStart="@+id/player1tray1" />

</RelativeLayout>

