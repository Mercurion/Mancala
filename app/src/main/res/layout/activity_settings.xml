<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settingsActivity"
    android:orientation="horizontal"
    android:background="@drawable/settingsback"
    android:weightSum="1">

    <ToggleButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textOff=""
        android:textOn=""
        android:id="@+id/toggleButtonMusic"
        android:background="@drawable/toggleswitch"
        android:layout_marginBottom="64dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/imageMusicButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/imageMusicButton"
        android:background="@drawable/music"
        android:layout_marginStart="52dp"
        android:layout_alignTop="@+id/toggleButtonMusic"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/multiPlayerButton"
        android:layout_alignBottom="@+id/toggleButtonMusic"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="81dp" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/goHomeButton1"
        android:background="@drawable/homebutton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>